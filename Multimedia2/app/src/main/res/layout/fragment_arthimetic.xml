<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentArthimetic"
    android:background="#083E69"
    android:padding="10dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>


            <EditText
                android:id="@+id/char_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="3dp"
                android:gravity="center"
                android:hint="Enter The Characters"
                android:background="@drawable/edit_text"
                android:elevation="20dp"
                android:textColor="#fff"
                android:maxLength="35"
                android:layout_marginTop="80dp"/>
            <EditText
                android:id="@+id/pro_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="3dp"
                android:gravity="center"
                android:hint="Enter The Probabilities"
                android:background="@drawable/edit_text"
                android:elevation="20dp"
                android:textColor="#fff"
                android:maxLength="35"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/text_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="3dp"
                android:gravity="center"
                android:hint="Enter The Text"
                android:background="@drawable/edit_text"
                android:elevation="20dp"
                android:textColor="#fff"
                android:maxLength="35"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/compress_arth_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shadow"
                    android:text="Compress"
                    android:textAllCaps="false"
                    android:elevation="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/decompress_arth_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shadow"
                    android:text="Decompress"
                    android:textAllCaps="false"
                    android:elevation="30dp"
                    />
            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/steps_bt"
            android:layout_width="275dp"
            android:layout_height="70dp"
            android:background="@drawable/shadow"
            android:elevation="30dp"
            android:text="Steps"
            android:textAllCaps="false" />
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>